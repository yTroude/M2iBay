# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Secure Imports
*       /                                       module:secure


# Public
GET     /                                       Public.index
GET     /produit/{produitUuid}/detail           PublicProduit.detailProduit
GET     /panier                                 PublicPanier.afficherPanier
GET     /panier/finaliser                       PublicPanier.finaliserCommande
GET     /produit/{produitUUID}/acheter          PublicPanier.addToPanier
POST    /panier/maj                             PublicPanier.updateQuantitePanier

# Connected user
GET     /commandes                              SessionCommande.afficherCommandes

# Admin
GET     /admin                                  Admin.index
GET     /admin/utilisateurs                     AdminUtilisateur.utilisateurs
GET     /admin/utilisateurs/{uuid}/detail       AdminUtilisateur.detailUtilisateur
GET     /admin/produits                         AdminProduit.produits
POST    /admin/produits                         AdminProduit.creerProduit
GET     /admin/produits/nouveau                 AdminProduit.formulaireProduit
GET     /admin/commandes                        AdminCommande.commandes
GET     /admin/commandes/{uuid}/detail          AdminCommande.detailCommande

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
# *       /{controller}/{action}                  {controller}.{action}
